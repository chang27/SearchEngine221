    <table class="form-table">
        <tr>
            <td align="left"><img src="../../image/Miya.jpg"/></td>

            {{#if keyword}}
                <td align="left">
                    <input name="keyword" value='<%=keyword%>' type="text" maxlength="100" id="textArea">
